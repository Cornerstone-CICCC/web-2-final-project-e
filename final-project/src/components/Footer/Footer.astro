---
import logoUrl from "../../assets/images/logo@x2.png";
import FacebookIcon from "../../assets/svgs/icon_facebook.svg";
import InstagramIcon from "../../assets/svgs/icon_instagram.svg";
import TwitterIcon from "../../assets/svgs/icon_twitter.svg";
import DribbbleIcon from "../../assets/svgs/icon_dribble.svg";
import LinkedInIcon from "../../assets/svgs/icon_linkedIn.svg";
import { Image } from "astro:assets";

const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="top">
      <a class="brand" href="/" aria-label="Ddsgnr Home">
        <Image src={logoUrl} alt="Ddsgnr" width={112} height={28} />
      </a>

      <nav class="nav text-regular-semibold" aria-label="Footer Navigation">
        <a href="/">Home</a>
        <a href="/services">Services</a>
        <a href="#">Cars</a>
        <a href="#">Shop</a>
        <a href="/contact">Contact</a>
      </nav>

      <div class="social" aria-label="Social links">
        <a class="icon" href="#" aria-label="Facebook">
          <Image src={FacebookIcon} alt="Facebook" />
        </a>
        <a class="icon" href="#" aria-label="Instagram">
          <Image src={InstagramIcon} alt="Instagram" />
        </a>
        <a class="icon" href="#" aria-label="Twitter">
          <Image src={TwitterIcon} alt="Twitter" />
        </a>
        <a class="icon" href="#" aria-label="LinkedIn">
          <Image src={LinkedInIcon} alt="LinkedIn" />
        </a>
      </div>
    </div>

    <hr class="divider" />

    <div class="bottom">
      <p class="text-small-normal copyright">
        {year} Ddsgnr. All right reserved.
      </p>
      <div class="text-small-link legal">
        <a href="#">Privacy Policy</a>
        <a href="#">Terms of Service</a>
        <a href="#">Cookie Settings</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #ffffff;
    color: var(--color-black);
  }
  .container {
    padding: 80px 64px;
  }

  .top {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 16px;
  }

  .brand img {
    height: 40px;
    width: auto;
    display: block;
  }

  .nav {
    display: flex;
    gap: 32px;
    justify-content: center;
    align-items: center;
  }

  .social {
    display: flex;
    justify-content: flex-end;
    gap: 12px;
  }

  .icon :global(svg),
  .icon :global(img) {
    width: 24px;
    height: 24px;
    display: block;
  }

  .divider {
    margin: 80px 0 32px;
    border: 0;
    border-top: 1px solid var(--color-black);
  }

  .bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 24px;
  }

  .legal {
    display: flex;
    gap: 24px;
  }
</style>
