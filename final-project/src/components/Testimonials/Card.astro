---
import { Image } from "astro:assets";
import Webflow from "../../assets/svgs/webflow.svg";
import ChevronRight from "../../assets/svgs/chevron_right.svg";

const { item } = Astro.props;
---

<article class="card" role="listitem">
  <Image class="card__brand" src={Webflow} alt={item.company} />

  <p class="text-medium-normal card__text">"{item.quote}"</p>

  <div class="card__meta">
    <Image src={item.avatar} alt={item.name} class="card__avatar" />
    <div class="card__info">
      <span class="text-regular-semibold card__name">{item.name}</span>
      <span class="text-regular-normal card__role">{item.role}</span>
    </div>
  </div>

  <a
    class="card__case-link"
    href="#"
    aria-label={`Read case study about ${item.company}`}>
    <span class="text-regular-normal card__case-label">Read case study</span>
    <Image src={ChevronRight} alt="" aria-hidden="true" class="card__icon" />
  </a>
</article>

<style>
  .card {
    border: 1px solid var(--color-black);
    padding: 32px;
    background: transparent;
    height: 404px;
    flex: 415px 0 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .card__brand {
    width: 120px;
    height: 48px;
  }

  .card__text {
    margin-top: 48px;
  }

  .card__meta {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-top: 24px;
  }

  .card__avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .card__info {
    display: flex;
    flex-direction: column;
  }

  .card__case-link {
    display: flex;
    align-items: center;
    margin-top: 32px;
    gap: 8px;
  }
</style>
