---
import { Image } from "astro:assets";
import AboutCar from "../../assets/images/about_car.jpg";
import ChevronRight from "../../assets/svgs/icon_chevron_right.svg";
import Play from "../../assets/svgs/icon_play.svg";
import { ABOUT_ITEMS } from "./data";
import Button from "../Button/Button.astro";
---

<div class="container about__container">
  <div class="about__content">
    <h2>About Us</h2>

    <div class="about__grid">
      {
        ABOUT_ITEMS.map((item) => (
          <div class="about__item">
            <h6>{item.title}</h6>
            <p>{item.text}</p>
          </div>
        ))
      }
    </div>

    <div class="about__actions">
      <Button label="Book Your Appointment Now" type="button" variant="line" />
      <a href="/about" class="button--link" aria-label="Learn more about us">
        <span class="text-regular-normal">Learn more</span>
        <Image src={ChevronRight} alt="" role="presentation" />
      </a>
    </div>
  </div>

  <div class="about__media">
    <div class="about__video">
      <Image
        src={AboutCar}
        alt="car"
        role="presentation"
        class="about__image"
      />
      <button class="about__play" aria-label="Play video">
        <Image src={Play} alt="" role="presentation" />
      </button>
    </div>
  </div>
</div>

<style>
  .about {
    background-color: var(--color-white);
  }

  .about__container {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 80px;
  }

  .about__content {
    flex: 1 1 50%;
  }

  .about__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px 24px;
    margin-top: 40px;
  }

  .about__item p {
    padding-top: 16px;
  }

  .about__actions {
    display: flex;
    gap: 24px;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 48px;
  }

  .button--link {
    color: var(--color-black);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .about__media {
    flex: 1 1 45%;
    display: flex;
    justify-content: center;
  }

  .about__video {
    position: relative;
    width: 100%;
    height: 541.5px;
    border-radius: 5px;
    overflow: hidden;
    z-index: 0;
    isolation: isolate;
  }

  .about__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: bottom;
    transform: scale(1);
    transform-origin: center;
    transition: transform 0.5s ease;
    will-change: transform;
    z-index: 0;
    pointer-events: none;
  }

  .about__video:hover .about__image,
  .about__video:focus-within .about__image {
    transform: scale(1.1);
  }

  .about__play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 128px;
    height: 102.4px;
    border-radius: 12px;
    background: rgba(0, 0, 0, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.3s ease;
    z-index: 1;
  }

  .about__play:hover {
    background: rgba(0, 0, 0, 0.5);
  }

  .about__play:focus-visible {
    outline: 3px solid rgba(255, 255, 255, 0.9);
    outline-offset: 2px;
    background: rgba(0, 0, 0, 0.35);
  }

  @media (max-width: 768px) {
    .about__container {
      flex-direction: column;
      gap: 48px;
    }

    .about__grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .about__media {
      width: 100%;
    }

    .about__video {
      width: 100%;
      height: 360px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .about__image {
      transition: none;
    }
    .about__video:hover .about__image,
    .about__video:focus-within .about__image {
      transform: none;
    }
  }
</style>
