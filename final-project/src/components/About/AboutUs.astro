---
import { Image } from "astro:assets";
import ChevronRight from "../../assets/svgs/icon_chevron_right.svg";
import Play from "../../assets/svgs/icon_play.svg";

const aboutItems = [
  {
    title: "Our Mission",
    text: "At Ddsgnr Auto Repair, our mission is to provide our customers with the highest level of car care and customer service.",
  },
  {
    title: "Our Expertise",
    text: "At Ddsgnr Auto Repair, our technicians are the heart and soul of our business. With years of experience and training.",
  },
  {
    title: "Our Equipment",
    text: "At Ddsgnr Auto Repair, we invest in state-of-the-art tools and equipment to ensure precision and reliability in every repair.",
  },
  {
    title: "Our Customer Promise",
    text: "At Ddsgnr Auto Repair, we are committed to delivering transparent, honest, and dependable service to every customer.",
  },
];
---

<div class="container about__container">
  <div class="about__content">
    <h2>About Us</h2>

    <div class="about__grid">
      {
        aboutItems.map((item) => (
          <div class="about__item">
            <h6>{item.title}</h6>
            <p>{item.text}</p>
          </div>
        ))
      }
    </div>

    <div class="about__actions">
      <a href="/book" class="button button--primary text-regular-normal">
        Book Your Appointment Now
      </a>
      <a
        href="/about"
        class="button--link"
        aria-label="Learn more about Ddsgnr">
        <span class="text-regular-normal">Learn more</span>
        <Image src={ChevronRight} alt="" role="presentation" />
      </a>
    </div>
  </div>

  <div class="about__media">
    <div class="about__video">
      <button class="about__play" aria-label="Play video">
        <Image src={Play} alt="" role="presentation" />
      </button>
    </div>
  </div>
</div>

<style>
  .about {
    padding: 112px 0;
    background-color: var(--color-white);
  }

  .about__container {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 80px;
  }

  .about__content {
    flex: 1 1 50%;
  }

  .about__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px 24px;
    margin-top: 40px;
  }

  .about__item p {
    padding-top: 16px;
  }

  .about__actions {
    display: flex;
    gap: 24px;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 48px;
  }

  .button {
    display: inline-block;
    padding: 12px 20px;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  .button--primary {
    color: var(--color-black);
    border: 1px solid var(--color-black);
  }

  .button--primary:hover {
    color: var(--color-white);
    background-color: var(--color-black);
    border-color: var(--color-black);
  }

  .button--link {
    color: var(--color-black);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .about__media {
    flex: 1 1 45%;
    display: flex;
    justify-content: center;
  }

  .about__video {
    position: relative;
    width: 100%;
    height: 541.5px;
    border-radius: 5px;
    overflow: hidden;
    background-image: url("../../assets/images/about_car.jpg");
    background-size: cover;
    background-position: bottom;
  }

  .about__play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 128px;
    height: 102.4px;
    border-radius: 12px;
    background: rgba(0, 0, 0, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .about__play:hover {
    background: rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 768px) {
    .about__container {
      flex-direction: column;
      gap: 48px;
    }

    .about__grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .about__media {
      width: 100%;
      padding-bottom: 48px;
    }

    .about__video {
      width: 100%;
      height: 360px;
    }
  }
</style>
