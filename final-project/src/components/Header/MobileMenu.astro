---
const navigationItems = [
  { label: "Home", href: "/" },
  { label: "Services", href: "/services" },
  { label: "About", href: "/about" },
  { label: "Contact", href: "/contact" },
];
---

<div class="mobile-menu">
  <button
    class="mobile-menu__toggle"
    id="mobileMenuToggle"
    aria-label="Toggle navigation menu">
    <span class="mobile-menu__line"></span>
    <span class="mobile-menu__line"></span>
    <span class="mobile-menu__line"></span>
  </button>

  <div class="mobile-menu__overlay" id="mobileMenu">
    <nav class="mobile-menu__nav">
      {
        navigationItems.map((item) => (
          <a href={item.href} class="mobile-menu__link">
            {item.label}
          </a>
        ))
      }
      <a href="/book" class="mobile-menu__cta">Book Your Appointment Now</a>
    </nav>
  </div>
</div>

<style>
  .mobile-menu {
    display: none;
    position: absolute;
    top: 12px;
    right: 24px;
    padding: 12px;
  }

  .mobile-menu__toggle {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 4px;
    z-index: 1001;
  }

  .mobile-menu__line {
    width: 24px;
    height: 3px;
    background-color: var(--color-black);
    border-radius: 2px;
  }

  .mobile-menu__overlay {
    position: fixed;
    inset: 0;
    background: var(--color-white);
    display: flex;
    justify-content: center;
    align-items: center;
    transform: translateY(-100%);
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s ease;
    z-index: 1000;
  }

  .mobile-menu__overlay.active {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu__nav {
    display: flex;
    flex-direction: column;
    gap: 24px;
    text-align: center;
  }

  .mobile-menu__link {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-neutral-dark-gray);
    transition: color 0.3s ease;
  }

  .mobile-menu__cta {
    margin-top: 30px;
    background-color: var(--color-black);
    color: var(--color-white);
    padding: 15px 24px;
    border-radius: 6px;
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-semibold);
    text-align: center;
    transition: all 0.3s ease;
  }

  .mobile-menu__toggle.active .mobile-menu__line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  .mobile-menu__toggle.active .mobile-menu__line:nth-child(2) {
    opacity: 0;
  }
  .mobile-menu__toggle.active .mobile-menu__line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  @media (max-width: 768px) {
    .mobile-menu {
      display: block;
    }
  }
</style>
